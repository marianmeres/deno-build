{
  "name": "@marianmeres/deno-build",
  "version": "1.5.0",
  "exports": {
    ".": "./cli.ts",
    "./lib": "./src/mod.ts"
  },
  "tasks": {
    "build:example": "deno run -A cli.ts --root example/src --outdir example/dist",
    "build:example2": "deno run -A cli.ts --root example/src --outdir example/dist --esbuild -f bundle2.js",
    "release": "deno run -A jsr:@marianmeres/deno-release",
    "rp": "deno task release -y && deno publish",
    "rpm": "deno task release -y minor && deno publish"
  },
  "imports": {
    "@deno/emit": "jsr:@deno/emit@^0.46.0",
    "@std/cli": "jsr:@std/cli@^1.0.24",
    "@std/path": "jsr:@std/path@^1.1.3",
    "@std/fs": "jsr:@std/fs@^1.0.20",
    "esbuild": "npm:esbuild@^0.24.0",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.0"
  },
  "exclude": [
    "example"
  ],
  "fmt": {
    "useTabs": true,
    "lineWidth": 90,
    "indentWidth": 4,
    "proseWrap": "preserve"
  }
}
